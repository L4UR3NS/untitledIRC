[Unit]
Description=UnrealIRCd
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=untitledirc
Group=untitledirc
WorkingDirectory={{INSTALL_PREFIX}}/unrealircd
ExecStart={{INSTALL_PREFIX}}/unrealircd/bin/unrealircd -F
ExecReload={{INSTALL_PREFIX}}/unrealircd/bin/unrealircdctl reload
Restart=on-failure
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
