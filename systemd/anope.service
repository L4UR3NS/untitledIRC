[Unit]
Description=Anope Services
After=network-online.target unrealircd.service
Wants=network-online.target

[Service]
Type=simple
User=untitledirc
Group=untitledirc
WorkingDirectory={{INSTALL_PREFIX}}/anope
ExecStart={{INSTALL_PREFIX}}/anope/bin/services
Restart=on-failure
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
